full:
	pdflatex revise-colt.tex
	bibtex   revise-colt.aux
	pdflatex revise-colt.tex
	pdflatex revise-colt.tex
	evince   revise-colt.pdf

rebut:
	pdflatex author_response.tex
	evince   author_response.pdf

barrett:
	pdflatex barrett.tex
	evince   barrett.pdf

